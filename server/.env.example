# Should be: 'development' for local dev, 'test' and 'staging' for our cloud pre-production projects, and 'production'
# for our production environment.
NODE_ENV='development'

# Valid values: 'production', 'staging', 'test', 'development'. Overridden in .gitlab-ci.yml.
APP_ENV=development

# Valid values: api, worker, cron or monolith. 
# Monolith is only used in local environments and will run all services in a single server
SERVICE_TYPE=monolith

PORT=3010

# Connection to the database from prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#using-environment-variables
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/scratchpaper?schema=public"

# Enable debug logging for database queries (true/false)
DB_DEBUG=false

# Connection to Redis - used for BullMQ, snapshot pub/sub events and caching
REDIS_HOST=localhost
REDIS_PORT=6379
# only include if you have auth on your redis instance
# REDIS_PW=.....

# Configuration for auth
CLERK_PUBLISHABLE_KEY=pk_test_ZmFjdHVhbC1ndXBweS01NS5jbGVyay5hY2NvdW50cy5kZXYk
# See: https://dashboard.clerk.com/apps/app_2ymxByR3cEOiOZGKx91GRzHZQ3f/instances/ins_2ymxBtQskUovRqqMFxDlz8s4QNT/api-keys
CLERK_SECRET_KEY=<Get this from the Clerk Dashboard (Scratch Development App) or Chris>

# Settings for PostHog
POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_API_KEY=<Get this from Posthog Dashboard>
POSTHOG_FEATURE_FLAG_API_KEY=<Get this from Posthog Dashboard>
# Defaults to true for deployed environments but must be manually set when using analytics in local development environments
# POSTHOG_ANALYTICS_ENABLED=false


# Settings for Stripe
