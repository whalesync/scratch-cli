{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/tsconfig.integration.json"
      }
    ]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(nanoid)/)"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../../src/$1"
  },
  "globalSetup": "<rootDir>/jest-setup.ts",
  "maxWorkers": 1
}
