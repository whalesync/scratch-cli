{
  "name": "scratch-git",
  "version": "1.0.0",
  "description": "Git microservice for Scratch",
  "private": true,
  "license": "UNLICENSED",
  "main": "main.ts",
  "scripts": {
    "start:api": "ts-node git-scratch-api.ts",
    "dev": "ts-node-dev --respawn git-scratch-api.ts",
    "dev:api": "ts-node-dev --respawn git-scratch-api.ts",
    "start:http-backend": "ts-node git-http-backend.ts",
    "dev:http-backend": "ts-node-dev --respawn git-http-backend.ts",
    "build": "tsc",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "isomorphic-git": "^1.25.0",
    "node-diff3": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0"
  }
}
