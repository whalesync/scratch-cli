{
    "name": "scratch-git",
    "version": "1.0.0",
    "description": "Git microservice for Scratch",
    "main": "main.ts",
    "scripts": {
        "start:api": "ts-node git-scratch-api.ts",
        "dev:api": "ts-node-dev --respawn git-scratch-api.ts",
        "start:http-backend": "ts-node git-http-backend.ts",
        "dev:http-backend": "ts-node-dev --respawn git-http-backend.ts",
        "build": "tsc"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "fs-extra": "^11.2.0",
        "isomorphic-git": "^1.25.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.10.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}