NEXT_PUBLIC_APP_ENV=local

# Default OpenRouter key -- this is used when no credentials are provided
OPENROUTER_API_KEY=your_openrouter_api_key_here
MODEL_NAME=openai/gpt-4o-mini

# Logfire (optional - for logging and observability)
# Get your token from https://logfire.sh
# We fall back to console logging for logs generated by us if no key is provided
# In that case the internal LLM logs are not shown too.
LOGFIRE_TOKEN=your_logfire_token_here
LOGFIRE_ENVIRONMENT=local-<yourname>
LOGFIRE_ENABLE_FULL_INSTRUMENTATION=true

# The URL to access the API server
SCRATCHPAD_SERVER_URL=http://localhost:3010

# Special auth token for communicating directly with the API server. Must match the value in your server/.env file
SCRATCHPAD_AGENT_AUTH_TOKEN=insecure
# Secret key for validating JWTs from the client and identifying users. Must match the value in your server/.env file
SCRATCHPAD_AGENT_JWT_SECRET=e50b24ccf924868afaf4404bb97f6f3431d95b3358dc68351a1483c67a5f356b

REQUIRE_USER_AGENT_CREDENTIALS=true

# Controls debug logging
DEBUG=true